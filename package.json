{
	"name": "codearea",
	"version": "0.1.0",
	"description": "A simple, compound React component for editing code in a real field element.",
	"keywords": [
		"code",
		"editor",
		"react"
	],
	"scripts": {
		"start": "tsdx watch",
		"lint": "tsdx lint",
		"build": "tsdx build && yarn build-styles",
		"example": "parcel example/index.html",
		"example-build": "parcel build example/index.html",
		"test": "tsdx test --passWithNoTests",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"build-styles": "node scripts/build-styles.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"main": "dist/index.js",
	"module": "dist/codearea.esm.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chancestrickland/codearea.git"
	},
	"author": "Chance Strickland <hi@chancedigital.io> (https://github.com/chancestrickland/)",
	"license": "MIT",
	"engines": {
		"node": ">=10"
	},
	"dependencies": {
		"@reach/auto-id": "^0.10.5",
		"@reach/visually-hidden": "^0.10.4"
	},
	"devDependencies": {
		"@babel/core": "^7.10.3",
		"@chancedigital/eslint-config": "^7.1.0",
		"@storybook/addon-actions": "^5.3.19",
		"@storybook/addon-docs": "^5.3.19",
		"@storybook/addon-info": "^5.3.19",
		"@storybook/addon-links": "^5.3.19",
		"@storybook/addons": "^5.3.19",
		"@storybook/react": "^5.3.19",
		"@types/prismjs": "^1.16.1",
		"@types/react": "^16.9.41",
		"@types/react-dom": "^16.9.8",
		"@types/styled-components": "^5.1.0",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"chalk": "^4.1.0",
		"cssnano": "^4.1.10",
		"eslint": "^7.3.1",
		"eslint-plugin-import": "^2.21.2",
		"eslint-plugin-jest": "^23.17.1",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.4",
		"husky": "^4.2.5",
		"parcel": "^1.12.4",
		"postcss-js": "^2.0.3",
		"postcss-nested": "^4.2.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"prismjs": "^1.20.0",
		"react": "^16.13.1",
		"react-docgen-typescript-loader": "^3.7.2",
		"react-dom": "^16.13.1",
		"react-is": "^16.13.1",
		"ts-loader": "^7.0.5",
		"ts-node": "^8.10.2",
		"tsdx": "^0.13.2",
		"tslib": "^2.0.0",
		"typescript": "^3.9.5"
	},
	"peerDependencies": {
		"react": ">=16.8",
		"react-dom": ">=16.8"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 2,
		"printWidth": 80,
		"semi": true,
		"trailingComma": "es5"
	},
	"eslintConfig": {
		"extends": [
			"@chancedigital",
			"@chancedigital/eslint-config/react",
			"@chancedigital/eslint-config/jest",
			"@chancedigital/eslint-config/typescript"
		],
		"rules": {
			"eslint-disable-next-line react/no-danger": 0
		}
	},
	"eslintIgnore": [
		"node_modules",
		"dist"
	]
}
